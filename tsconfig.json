{
    "compilerOptions": {
        "module": "node16",
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
